<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
    
    <style name="trainItemGREEN">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#37C100</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
    </style>
    
    <style name="trainItemORANGEsmall">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#FF831C</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
    </style>
    
    <style name="trainItemORANGE">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#FF831C</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
    </style>
    
    <style name="trainItemBLACK">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
    </style>
    
    <style name="wrapTextView">
        <item name="android:textSize">18sp</item>
        <item name="android:padding">5dp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
    </style>    
    
    <style name="horizonWeightLayout">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:orientation">horizontal</item>
    </style>
    
    <style name="verticalWeightLayout">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:orientation">vertical</item>
    </style>
    
    <style name="MyListBackContent">
       <item name="android:layout_width">match_parent</item>
       <item name="android:layout_height">match_parent</item>
       <item name="android:background">@drawable/background_back</item>
       <item name="android:gravity">center</item>
   </style>
 
   <style name="MyListFrontContent">
       <item name="android:layout_width">match_parent</item>
       <item name="android:layout_height">match_parent</item>
   <!--<item name="android:background">@drawable/background_front</item>  -->    
       <item name="android:padding">5dp</item>
       <item name="android:background">#FFFFFF</item>
       
   </style>
 
     <style name="MyListButtonAction">
       <item name="android:layout_margin">5dp</item>
       <item name="android:layout_width">80dp</item>
       <item name="android:layout_height">30dp</item>
 
   </style>
 
     <style name="MyListImage">
       <item name="android:layout_width">64dp</item>
       <item name="android:layout_height">64dp</item>
       <item name="android:scaleGravity">fill</item>
       <item name="android:layout_marginRight">8dp</item>
   </style>
 
   <style name="MyListTitle">
       <item name="android:paddingBottom">8dp</item>
       <item name="android:textSize">17sp</item>
       <item name="android:textStyle">bold</item>
       <item name="android:maxLines">2</item>
       <item name="android:ellipsize">end</item>
   </style>


</resources>
